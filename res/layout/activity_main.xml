<?xml version="1.0" encoding="utf-8"?> 
<merge  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout 
	    android:id="@+id/mMapView"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:clickable="true"/>
    <LinearLayout 
        android:id="@+id/bar_control"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:alpha="0.9"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/icon_bus"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/icon_bus"/>
        <ImageView 
            android:id="@+id/icon_food"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/icon_food"/>
        <ImageView 
            android:id="@+id/icon_hospital"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/icon_hospital"/>
        <ImageView 
            android:id="@+id/icon_school"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/icon_school"/>
        <ImageView 
            android:id="@+id/icon_shop"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/icon_shop"/>
    </LinearLayout>
    <ImageView 
        android:id="@+id/btn_panorama"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="right|top"
        android:layout_marginRight="24dp"
        android:layout_marginTop="36dp"
        android:alpha="0.8"
        android:src="@drawable/icon_street_view"/>
   <ImageView 
        android:id="@+id/btn_route"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="right|top"
        android:layout_marginRight="24dp"
        android:layout_marginTop="102dp"
        android:alpha="0.8"
        android:src="@drawable/icon_route"/>
</merge>